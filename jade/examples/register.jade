extends example-template.jade

block title
  title Register form

block content
  .form-container.register-form.animated.fadeInDown
    form(action='', method='post', id='register-form', class='rcw-form container-fluid')
      header
        h3.form-main-heading Register
      fieldset.row
        .col-md-12#submit-message(style='display: none;')
        .col-md-12
          legend
            span Account details
        .form-group.col-md-12.has-icon-left
          label(for='username', class='sr-only') Username
          input(type='text', name='username', id='username', class='form-control ff-rounded', placeholder='Username *')
          span.icon-user14.icon-left
        .form-group.col-md-12.has-icon-left
          label(for='email', class='sr-only') Email address
          input(type='email', name='email', id='email', class='form-control ff-rounded', placeholder='Email address *')
          span.icon-envelope7.icon-left
        .form-group.col-md-12.has-icon-left
          label(for='password', class='sr-only') Password
          input(type='password', name='password', id='password', class='form-control ff-rounded', placeholder='Password *')
          span.icon-locked5.icon-left
        .form-group.col-md-12.has-icon-left
          label(for='retype-password', class='sr-only') Retype password
          input(type='password', name='retype_password', id='retype-password', class='form-control ff-rounded', placeholder='Retype password *')
          span.icon-locked5.icon-left
      fieldset.row
        .col-md-12
          legend
            span Personal details
        .form-group.col-md-12.has-icon-left
          label(for='first-name', class='sr-only') First name
          input(type='text', name='first_name', id='first-name', class='form-control ff-rounded', placeholder='First name *')
          span.icon-user14.icon-left
        .form-group.col-md-12.has-icon-left
          label(for='last-name', class='sr-only') Last name
          input(type='text', name='last_name', id='last-name', class='form-control ff-rounded', placeholder='Last name *')
          span.icon-user14.icon-left
        .form-group.col-md-12.has-icon-left
          label(for='gender', class='sr-only') Gender
          select(name='gender', id='gender', class='form-control ff-rounded')
            option(value='', selected, disabled) Choose gender *
            option(value='male') Male
            option(value='female') Female
          span.select-icon.icon-arrow-down8.ff-rounded-r
          span.icon-users5.icon-left
        .form-group.col-md-12
          .checkbox-inline
            input(type='checkbox', name='subscribe', id='subscribe', value='yes')
            label(for='subscribe') Subscribe to our newsletter. We won't spam!
        .form-group.col-md-12
          .checkbox-inline
            input(type='checkbox', name='terms', id='terms', value='yes')
            label(for='terms') I agree with the <a href="#" title="Terms and conditions" target='_blank'>terms and conditions</a>.
      footer.ff-rounded-b
        input(type='submit', name='submit', value='Register', class='btn btn-primary ff-rounded', style='margin-right: 10px;')
        button(type='reset', class='btn btn-default ff-rounded btn-has-icon-left')
          span.btn-icon-left.icon-cancel5.ff-rounded-l
          | Reset
block mainjs
  script(src='../scripts/register.js')
