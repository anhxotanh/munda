extends example-template.jade

block title
  title Monthpicker

block content
  .form-container.monthpicker-form.animated.fadeInDown
    form(action='', method='post', enctype='multipart/form-data', id='monthpicker-form', class='rcw-form container-fluid')
      header
        h3.form-main-heading Monthpicker
      fieldset.row
        .col-md-12
          legend
            span Monthpickers
        .form-group.col-md-12.has-icon-left
          label(for='monthpicker-1', class='sr-only') Monthpicker 1
          input(type='text', name='monthpicker-1', id='monthpicker-1', class='form-control ff-rounded', placeholder='Pick month')
          span.icon-calendar-alt-stroke.icon-left
      footer.ff-rounded-b
        input(type='submit', name='submit', value='Submit', class='btn btn-primary ff-rounded', style='margin-right: 10px;')
        button(type='reset', class='btn btn-default ff-rounded btn-has-icon-left')
          span.btn-icon-left.icon-cancel5.ff-rounded-l
          | Reset
block mainjs
  script(src='../scripts/monthpicker.js')
