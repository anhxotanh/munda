extends example-template.jade

block title
  title Request quote form

block content
  .form-container.request-quote-form.animated.fadeInDown
    form(action='', method='post', enctype='multipart/form-data', id='request-quote-form', class='rcw-form container-fluid')
      header
        h3.form-main-heading Request quote
      fieldset.row
        .col-md-12
          legend
            span Your details
        .col-md-12
          .row
            .form-group.col-md-6.has-icon-right
              label(for='name', class='sr-only') Your name
              input(type='text', name='name', id='name', class='form-control ff-rounded', placeholder='Your name')
              span.icon-user14.icon-right
            .form-group.col-md-6.has-icon-right
              label(for='company', class='sr-only') Company name
              input(type='text', name='company', id='company', class='form-control ff-rounded', placeholder='Company name')
              span.icon-suitcase3.icon-right
        .col-md-12
          .row
            .form-group.col-md-6.has-icon-right
              label(for='email', class='sr-only') Email address
              input(type='email', name='email', id='email', class='form-control ff-rounded', placeholder='Email address')
              span.icon-envelope7.icon-right
            .form-group.col-md-6.has-icon-right
              label(for='phone-number', class='sr-only') Phone number
              input(type='text', name='phone_number', id='phone-number', class='form-control ff-rounded', placeholder='Phone number')
              span.icon-phone32.icon-right
      fieldset.row
        .col-md-12
          legend
            span Project information
        .form-group.col-md-6
          label(for='service', class='sr-only') Service
          select(name='service', id='service', class='form-control ff-rounded')
            option(value='', selected, disabled) Choose service
            option(value='logo-design') Logo design
            option(value='graphic-design') Graphic design
            option(value='web-design') Web design
            option(value='web-development') Web development
          span.select-icon.icon-arrow-down8.ff-rounded-r
        .form-group.col-md-6
          label(for='budget', class='sr-only') Budget
          select(name='budget', id='budget', class='form-control ff-rounded')
            option(value='', selected, disabled) Your budget
            option(value='logo-design') Less than $1000
            option(value='graphic-design') Between $1000 and $2000
            option(value='web-design') Between $2001 and $5000
            option(value='web-development') More than $5000
          span.select-icon.icon-arrow-down8.ff-rounded-r
        .form-group.col-md-12.has-icon-left
          label(for='deadline') Deadline
          input(type='text', name='deadline', id='deadline', class='form-control ff-rounded', placeholder='Pick a date')
          span.icon-calendar4.icon-left
        .form-group.col-md-12
          label(for='file', class='sr-only') Project related file
          div
            input(type='file', name='file', id='file')
          span.help-block Upload a file that is related to your project
        .form-group.col-md-12.has-icon-right
          label(for='message', class='sr-only') Your message
          textarea(name='message', cols='30', rows='6', id='message', class='form-control ff-rounded', placeholder='Your message')
          span.icon-pen3.icon-right
          span.help-block
            | You may use these HTML tags and attributes: &lt;a href=&quot;&quot; title=&quot;&quot;&gt;, &lt;abbr title=&quot;&quot;&gt;, &lt;b&gt;, &lt;blockquote cite=&quot;&quot;&gt;, &lt;cite&gt;, &lt;code&gt;, &lt;del datetime=&quot;&quot;&gt;,&lt;ins&gt;, &lt;em&gt;, &lt;i&gt;, &lt;q cite=&quot;&quot;&gt;, &lt;strike&gt;, &lt;strong&gt;.
        .form-group.col-md-12
          label(for='verificatin-code', class='sr-only') Verification code
          .input-group
            input(type='text', name='verificatin_code', id='verificatin-code', class='form-control ff-rounded-l', placeholder='Enter result')
            span.input-group-addon.ff-rounded-r 5 + 2 ?
        .form-group.col-md-12
          .checkbox-inline
            input(type='checkbox', name="send_copy", id='send-copy')
            label(for='send-copy') Send a copy of the email to me
      footer.ff-rounded-b
        button(type='submit', name='submit', class='btn btn-primary ff-rounded', style='margin-right: 10px;') Request quote
        button(type='reset', class='btn btn-default ff-rounded') Reset
block mainjs
  script(src='../scripts/request-quote.js')
